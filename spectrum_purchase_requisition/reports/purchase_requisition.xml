<odoo>
    <data>
        <record id="purchase_requisition.action_report_purchase_requisitions" model="ir.actions.report">
        <field name="name">Purchase Agreements</field>
        <field name="model">purchase.requisition</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">purchase_requisition.report_purchaserequisitions</field>
        <field name="report_file">purchase_requisition.report.report_purchaserequisitions</field>
        <field name="print_report_name">'Purchase Requisition - %s' % (object.name)</field>
        <field name="binding_model_id" ref="purchase_requisition.model_purchase_requisition"/>
        <field name="binding_type">report</field>
    </record>
        <template id="custom_report_purchaserequisition_document" inherit_id="purchase_requisition.report_purchaserequisition_document">
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">
                <t t-call="web.internal_layout">
                    <div class="page">
                         <div class="row mb-4">
                            <div class="col-6">
                                <span t-if="o.company_id.logo">
                                    <img t-att-src="image_data_uri(o.company_id.logo)"
                                         style="max-height:45pt; max-width:90%" alt="Company Logo"/>
                                </span>
                            </div>
                            <div class="col-6 text-right">
                                <h2 class="mt-4">
                                    <span t-field="o.company_id.name"/>
                                </h2>
                                 <strong>
                                <span t-field="o.company_id.street"/>,
                                <span t-field="o.company_id.street2"/>,
                                <span t-field="o.company_id.city"/>,
                                <span t-field="o.company_id.state_id"/>,
                                <span t-field="o.company_id.zip"/>,
                                <span t-field="o.company_id.country_id"/>,
                            </strong>
                            </div>
                        </div>
                        <table style="width: 100%; margin-bottom: 20px; border-collapse: collapse;">
                            <tr>
                                <td>
                                    <strong>Receipt No.:</strong>
                                    <t t-esc="o.name"/>
                                </td>
                                <td>
                                    <strong>Ordering Date:</strong>
                                        <t t-esc="o.ordering_date.strftime('%d-%b-%Y') if o.ordering_date else ''"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Received From:</strong>
                                    <t t-esc="o.vendor_id.name"/>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <strong>Ship to Org:</strong>
                                    <!--                                    <t t-esc="doc.ship_to_org"/>-->
                                </td>
                                <td>
                                    <strong>Project Code:</strong>
                                    <!--                                    <t t-esc="doc.project_code"/>-->
                                </td>
                            </tr>
                        </table>

                        <table style="width: 100%; border: 1px solid #000; border-collapse: collapse;">
                            <thead>
                                <tr style="background-color: #f0f0f0;">
                                    <th style="border: 1px solid #000;">Stock Description</th>
                                    <th style="border: 1px solid #000;">Unit</th>
                                    <th style="border: 1px solid #000;">Qty</th>
                                    <th style="border: 1px solid #000;">Unit Price</th>
                                    <th style="border: 1px solid #000;">Total Price</th>
                                    <th style="border: 1px solid #000;">Scheduled Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-set="grand_total" t-value="0.0" />
                                <t t-foreach="o.line_ids" t-as="line">
                                    <tr>
                                        <td style="border: 1px solid #000;text-align: center;">
                                            <t t-esc="line.product_id.name"/>
                                        </td>
                                        <td style="border: 1px solid #000;text-align: center;">
                                            <t t-esc="line.uom_id.name"/>
                                        </td>
                                        <td style="border: 1px solid #000;text-align: center;">
                                            <t t-esc="line.product_qty"/>
                                        </td>
                                        <td style="border: 1px solid #000;text-align: center;">
                                            <t t-esc="line.price_unit"/>
                                        </td>
                                        <td style="border: 1px solid #000;text-align: center;">
                                            <t t-esc="line.product_qty * line.price_unit"/>
                                        </td>
                                        <td style="border: 1px solid #000;text-align: center;">
                                            <t t-esc="line.schedule_date.strftime('%d-%b-%Y') if line.schedule_date else ''"/>
                                        </td>

                                    </tr>
                                    <t t-set="line_total" t-value="(line.product_qty or 0.0) * (line.price_unit or 0.0)"/>
                                    <t t-set="grand_total" t-value="grand_total + line_total"/>
                                </t>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" style="border: 1px solid #000; text-align: right;">
                                        <strong>Grand Total</strong>
                                    </td>
                                    <td style="border: 1px solid #000;text-align: center;">
                                        <t t-esc="grand_total"/>
                                    </td>
                                    <td colspan="2" style="border: 1px solid #000;"/>
                                </tr>
                            </tfoot>
                        </table>

                        <p style="margin-top: 20px;">
                            <strong>Prepared By:</strong>
                            <!--                            <t t-esc="doc.prepared_by"/>-->
                            <br/>
                            <strong>Received By:</strong>
                            <!--                            <t t-esc="doc.received_by"/>-->
                            <br/>
                            <strong>Approved By:</strong>
                            <!--                            <t t-esc="doc.approved_by"/>-->
                        </p>
                    </div>

                </t>
            </xpath>
        </template>


    </data>
</odoo>