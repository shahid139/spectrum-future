<odoo>
    <data>


        <record id="stock.action_report_picking" model="ir.actions.report">
            <field name="name">RECEIVING REPORT</field>
            <field name="model">stock.picking</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">stock.report_picking</field>
            <field name="report_file">stock.report_picking_operations</field>
            <field name="print_report_name">'RECEIVING REPORT - %s - %s' % (object.partner_id.name or '',
                object.name)
            </field>
            <field name="binding_model_id" ref="stock.model_stock_picking"/>
            <field name="binding_type">report</field>
        </record>

        <template id="custom_report_picking" inherit_id="stock.report_picking">
            <xpath expr="//t[@t-call='web.external_layout']" position="replace">
                <t t-call="web.basic_layout">
                    <xpath expr="//div[@class='header']" position="replace">
                        <div class="header">
                            <div class="col-6">
                                <span t-if="o.company_id.logo">
                                    <img t-att-src="image_data_uri(o.company_id.logo)"
                                         style="max-height:30pt; max-width:60%" alt="Company Logo"/>
                                </span>
                            </div>
                            <div class="row">
                                <div class="row mb-4">

                                    <div class="col-6 text-left">
                                        <h2 class="mt-4">
                                            <span t-field="o.company_id.name"/>
                                        </h2>
                                        <strong>
                                            <span t-field="o.company_id.street"/>,
                                            <span t-field="o.company_id.street2"/>,
                                            <span t-field="o.company_id.city"/>,
                                            <span t-field="o.company_id.state_id"/>,
                                            <span t-field="o.company_id.zip"/>,
                                            <span t-field="o.company_id.country_id"/>,
                                            <span t-field="o.company_id.phone"/>,
                                            <span t-field="o.company_id.mobile"/>,
                                        </strong>
                                    </div>
                                    <div class="col-6 text-right">
                                        <h2 class="mt-4">
                                            <span t-field="o.company_id.trans_comapany_name"/>
                                        </h2>
                                        <strong>
                                            <span t-field="o.company_id.trans_street"/>,
                                            <span t-field="o.company_id.trans_street2"/>,
                                            <span t-field="o.company_id.trans_city"/>,
                                            <span t-field="o.company_id.trans_state_id"/>,
                                            <span t-field="o.company_id.zip"/>,
                                            <span t-field="o.company_id.trans_country_id"/>,
                                            <span t-field="o.company_id.phone"/>,
                                            <span t-field="o.company_id.mobile"/>,
                                        </strong>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </xpath>
                <br/>
                    <div class="page">
                        <table style="width: 100%; margin-bottom: 20px; border-collapse: collapse;">
                            <tr>
                                <td colspan="2"
                                    style="height: 50px; vertical-align: middle; font-weight: 900; font-size: 18px; text-align: left; padding-left: 5px;">
                                    RECEIVING REPORT
                                </td>
                                <td colspan="2"
                                    style="height: 50px; vertical-align: middle; font-weight: 900; font-size: 18px; text-align: left; padding-left: 5px;">
                                    <strong>Receipt No.:-</strong>
                                    <t t-esc="o.name"/>
                                </td>
                                <td style="height: 50px; vertical-align: middle; font-weight: 900; font-size: 18px; text-align: left; padding-left: 5px;">
                                    DATE
                                </td>
                                <td style="height: 50px; vertical-align: middle; font-size: 18px; text-align: left; padding-left: 5px;">
                                    <t t-esc="o.scheduled_date.strftime('%d-%b-%Y') if o.scheduled_date else ''"/>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4"
                                    style="height: 50px; vertical-align: middle; font-size: 18px; text-align: left; padding-left: 5px;">
                                    RECEIVED FROM :
                                    <t t-esc="o.partner_id.name"/>
                                </td>
                                <td style="height: 50px; vertical-align: middle; font-size: 18px; text-align: left; padding-left: 5px;">
                                    <strong>SHIP TO ORG</strong>
                                </td>
                                <td style="height: 50px; vertical-align: middle; font-size: 18px; text-align: left; padding-left: 5px;">
                                    CON
                                </td>
                            </tr>
                            <tr>
                                <td colspan="4"
                                    style="height: 50px; vertical-align: middle; font-size: 18px; text-align: left; padding-left: 5px;">
                                </td>
                                <td style="height: 50px; vertical-align: middle; font-size: 18px; text-align: left; padding-left: 5px;">
                                    PROJECT CODE
                                </td>
                                <td style="height: 50px; vertical-align: middle; font-size: 18px; text-align: left; padding-left: 5px;">
                                    1023
                                </td>
                            </tr>
                            <tr style="background-color: #f0f0f0;">
                                <th style="border: 1px solid #000;height: 50px; vertical-align: middle; font-size: 18px; text-align: left; padding-left: 10px;">
                                    STOCK DESCRIPTION
                                </th>
                                <th style="border: 1px solid #000;height: 50px; vertical-align: middle; font-size: 18px; text-align: left; padding-left: 10px;">
                                    QTY
                                </th>
                                <th style="border: 1px solid #000;height: 50px; vertical-align: middle; font-size: 18px; text-align: left; padding-left: 10px;">
                                    UNIT PRICE
                                </th>
                                <th style="border: 1px solid #000;height: 50px; vertical-align: middle; font-size: 18px; text-align: left; padding-left: 10px;">
                                    TOTAL PRICE
                                </th>
                                <th style="border: 1px solid #000;height: 50px; vertical-align: middle; font-size: 18px; text-align: left; padding-left: 10px;">
                                    P.O. NO
                                </th>
                                <th style="border: 1px solid #000;height: 50px; vertical-align: middle; font-size: 18px; text-align: left; padding-left: 10px;">
                                    DATE OF EXPIRY
                                </th>
                            </tr>
                            <t t-set="grand_total" t-value="0.0"/>
                            <t t-foreach="o.move_ids_without_package" t-as="line">
                                <tr>
                                    <td style="border: 1px solid #000; text-align: center; height: 50px;vertical-align: middle;">
                                        <t t-esc="line.description_picking"/>
                                    </td>
                                    <td style="border: 1px solid #000; text-align: center; height: 50px;vertical-align: middle;">
                                        <t t-esc="line.quantity"/>
                                    </td>
                                    <td style="border: 1px solid #000; text-align: center; height: 50px;vertical-align: middle;">
                                        <t t-esc="line.price_unit"/>
                                    </td>
                                    <td style="border: 1px solid #000; text-align: center; height: 50px;vertical-align: middle;">
                                        <t t-esc="line.quantity * line.price_unit"/>
                                    </td>
                                    <td style="border: 1px solid #000; text-align: center; height: 50px;vertical-align: middle;">
                                        <t t-esc="line.picking_id.origin"/>
                                    </td>
                                    <td style="border: 1px solid #000; text-align: center; height: 50px;vertical-align: middle;">
                                        <t t-esc="line.date_deadline.strftime('%d-%b-%Y') if line.date_deadline else ''"/>
                                    </td>
                                </tr>
                                <t t-set="line_total" t-value="(line.quantity or 0.0) * (line.price_unit or 0.0)"/>
                                <t t-set="grand_total" t-value="grand_total + line_total"/>
                            </t>

                            <tfoot>
                                <tr>
                                    <td colspan="3"
                                        style="border: 1px solid #000; text-align: right; height: 50px;vertical-align: middle;">
                                        <strong>GRAND TOTAL</strong>
                                    </td>
                                    <td style="border: 1px solid #000; text-align: center; height: 50px;">
                                        <t t-esc="grand_total"/>
                                    </td>
                                    <td colspan="2" style="border: 1px solid #000; height: 50px;"/>
                                </tr>
                                <tr>
                                    <td colspan="3"
                                        style="height: 50px; vertical-align: middle; font-weight: 900; font-size: 18px; text-align: left; padding-left: 5px;">
                                        PREPARED BY :
                                        <t t-esc="o.create_uid.name"/>
                                    </td>
                                    <td colspan="3"
                                        style="height: 50px; vertical-align: middle; font-weight: 900; font-size: 18px; text-align: left; padding-left: 5px;">
                                        RECEIVED BY :
                                        <t t-esc="o.create_uid.name"/>
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="3"
                                        style="height: 50px; vertical-align: middle; font-weight: 900; font-size: 18px; text-align: left; padding-left: 5px;">
                                        APPROVED BY :
                                        <t t-esc="o.write_uid.name"/>
                                    </td>
                                    <td colspan="3"
                                        style="height: 50px; vertical-align: middle; font-weight: 900; font-size: 18px; text-align: left; padding-left: 5px;">
                                        STOCK CARDS :
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </t>
            </xpath>
        </template>


    </data>
</odoo>