<odoo>
    <data>
        <record id="res_partner_inherited" model="ir.ui.view">
            <field name="name">res.partner.inherited</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/div[@name='warning_tax']" position="before">
                    <header>
                        <button name="block_customer" invisible="customer_status == 'block'" type="object" string="Block" confirm="Do you want to block the Customer?"/>
                        <button name="unblock_block_customer" invisible="customer_status == 'unblock'" type="object" string="UnBlock" confirm="Do you want to block the Customer?"/>
                    </header>
                </xpath>
                <field name="industry_id" position="after">
                    <field name="vendor_account"/>
                </field>
                <xpath expr="//field[@name='street']" position="replace">
                    <field name="street" required="1" placeholder="Street..." class="o_address_street"
                           readonly="type == 'contact' and parent_id"/>
                </xpath>
                <xpath expr="//field[@name='street2']" position="replace">
                    <field name="street2" required="1" placeholder="Street 2..." class="o_address_street"
                           readonly="type == 'contact' and parent_id"/>
                </xpath>
                <xpath expr="//field[@name='city']" position="replace">
                    <field name="city" required="1" placeholder="City" class="o_address_city"
                           readonly="type == 'contact' and parent_id"/>

                </xpath>
                <xpath expr="//field[@name='state_id']" position="replace">
                    <field name="state_id" required="1" class="o_address_state" placeholder="State"
                           options="{'no_open': True, 'no_quick_create': True}"
                           readonly="type == 'contact' and parent_id"
                           context="{'country_id': country_id, 'default_country_id': country_id, 'zip': zip}"/>

                </xpath>
                <xpath expr="//field[@name='zip']" position="replace">
                    <field name="zip" required="1" placeholder="ZIP" class="o_address_zip"
                           readonly="type == 'contact' and parent_id"/>

                </xpath>
                <xpath expr="//field[@name='country_id']" position="replace">
                    <field name="country_id" required="1" placeholder="Country" class="o_address_country"
                           options="{&quot;no_open&quot;: True, &quot;no_create&quot;: True}"
                           readonly="type == 'contact' and parent_id"/>

                </xpath>
                <xpath expr="//field[@name='vat']" position="replace">
                    <field name="vat" required="1" placeholder="e.g. BE0477472701" readonly="parent_id"/>
                </xpath>
                <xpath expr="//field[@name='vat']" position="after">
                    <field name="cr_number" required="1" placeholder="e.g. BE0477472701" readonly="parent_id"/>
                    <field name="customer_currency" required="1" readonly="parent_id"/>
                    <field name="customer_tax" required="1"  readonly="parent_id"/>

                    <field name="customer_status" invisible="1"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>