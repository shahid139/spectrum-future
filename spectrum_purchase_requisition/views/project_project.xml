<odoo>
    <data>
         <record id="project_project_inherited" model="ir.ui.view">
            <field name="name">project.project.inherited</field>
            <field name="model">project.project</field>
            <field name="inherit_id" ref="project.edit_project"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_start']" position="after">
                    <field name="total_budget"/>
                    <field name="spent_amount"/>
                    <field name="available_budget"/>
                </xpath>
                <xpath expr="//page[@name='settings']" position="after">
                    <page name="budget_history" string="Budget History">
                        <field name="budget_history">
                            <tree create="0" delete="0">
                                <field name="write_uid"/>
                                <field name="write_date"/>
                                <field name="old_value"/>
                                <field name="new_value"/>
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
         </record>

    </data>
</odoo>