<odoo>
    <data>

        <record id="pr_creation_form_inherited" model="ir.ui.view">
            <field name="name">pr.creation.flow.form</field>
            <field name="model">purchase.requisition</field>
            <field name="inherit_id" ref="purchase_requisition.view_purchase_requisition_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='date_end']" position="replace">
                    <field name="date_end"  invisible="1" readonly="state not in ('draft', 'in_progress', 'open', 'ongoing')"/>

                </xpath>
                <xpath expr="//button[@name='action_done']" position="replace">
                    <button name="action_done"
                            invisible="state not in ('open', 'ongoing','first_approval','second_approval')"
                            string="Close" type="object" class="btn-primary"/>
                    <field name="invoice_status" invisible="1"/>

                </xpath>
                <xpath expr="//button[@name='action_cancel']" position="replace">
                    <button name="action_cancel"
                            invisible="state not in ('draft', 'in_progress', 'ongoing', 'first_approval','second_approval')"
                            string="Cancel" type="object"/>
                </xpath>

                <xpath expr="//button[2]" position="replace">
                    <button name="%(purchase_requisition.action_purchase_requisition_to_so)d" type="action"
                            string="New Quotation" class="btn-primary"
                            context="{'default_currency_id': currency_id, 'default_user_id': user_id}"
                            invisible="state != 'ongoing' or is_po_need !=False"/>

                </xpath>
                <xpath expr="//button[1]" position="replace">
                    <button name="%(purchase_requisition.action_purchase_requisition_to_so)d" type="action"
                    string="New Quotation"
                    context="{'default_currency_id': currency_id, 'default_user_id': user_id}"
                   invisible="state not in ('ongoing','open') or is_po_need !=False"/>

                </xpath>
                <xpath expr="//button[@name='action_in_progress']" position="replace">
                    <button name="action_in_progress" invisible="state != 'second_approval'" string="Confirm"
                            type="object"
                            class="btn-primary"/>


                </xpath>
                <xpath expr="//button[@name='action_in_progress']" position="after">
                    <button name="check_budget"
                            type="object"
                            string="Check Budget"
                            class="btn-primary"
                            invisible="state != 'draft'"
                    />
                    <button name="first_approval" invisible="state != 'draft'" string="Approval 1" type="object"
                            class="btn-primary"/>
                    <button name="second_approval" invisible="state != 'first_approval'" string="Approval 2"
                            type="object"
                            class="btn-primary"/>
                    <button name="action_create_invoice" string="Create Bill" type="object" class="oe_highlight"
                            context="{'create_bill':True}"
                            invisible="state not in ['ongoing','open'] or is_po_need==False"
                            data-hotkey="w"/>
<!--                    invisible="state != 'ongoing' and is_po_need==False"-->
<!--                    ['draft', 'first_approval', 'second_approval', 'inprogress', 'done', 'cancel']-->

                </xpath>
                <xpath expr="//field[@name='vendor_id']" position="replace">
                    <field name="vendor_id" context="{'res_partner_search_mode': 'supplier'}"  required="1" domain="[('customer_status', '=', 'unblock')]" readonly="state in ['ongoing', 'done']"/>

                </xpath>
                <xpath expr="//field[@name='user_id']" position="before">
                    <field name="business_unit" readonly="state in ['ongoing', 'done']"/>
                    <field name="project_id" readonly="state in ['ongoing', 'done']"/>
                    <field name="is_po_need" invisible="1"/>
                </xpath>
                <xpath expr="//field[@name='date_end']" position="before">
                    <field name="account_id" readonly="state in ['ongoing', 'done']"/>
<!--                    <field name="budget_task" readonly="state in ['ongoing', 'done']"/>-->

                </xpath>
                <xpath expr="//tree/field[@name='qty_ordered']" position="replace">
                    <field name="qty_ordered" optional="show" invisible="1"/>

                </xpath>

                <xpath expr="//tree/field[@name='price_unit']" position="after">
                    <field name="currency_id" column_invisible="True" force_save="1"/>
                    <field name="total" sum="Total" readonly="1" force_save="1"/>
                </xpath>
                <xpath expr="//tree/field[@name='product_qty']" position="after">
                    <field name="uom_id"/>
                </xpath>
                <field name="type_id" position="replace">
                    <field name="type_id" readonly="state != 'draft'" string="Select Pr Type"/>

                </field>
                <xpath expr="//div[@name='button_box']" position="inside">
                    <button type="object" name="action_view_invoice"
                            class="oe_stat_button"
                            icon="fa-pencil-square-o"
                            invisible="state != 'ongoing' and is_po_need==False"
                            string="Vendor Bills">
                        <field name="invoice_count" widget="statinfo" string="Vendor Bills"/>
                        <field name="invoice_ids" invisible="1"/>
                    </button>
                </xpath>
                <xpath expr="//page[@name='products']" position="after">
                    <page string="Approvals" name="approvals">
                        <group>
                            <group>
                                <field name="first_approved_user" readonly="1"/>
                                <field name="first_approved_date" readonly="1"/>
                            </group>
                             <group>
                                <field name="last_approved_by" readonly="1"/>
                                <field name="second_approved_date" readonly="1"/>
                            </group>
                        </group>

                    </page>
                </xpath>
            </field>
        </record>

        <record model="ir.actions.act_window" id="purchase_requisition.action_purchase_requisition">
        <field name="name">Purchase Requisition</field>
        <field name="res_model">purchase.requisition</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="context">{}</field>
        <field name="search_view_id" ref="purchase_requisition.view_purchase_requisition_filter"/>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Start a new purchase agreement
          </p><p>
            An example of a purchase agreement is a blanket order.
          </p><p>
            For a blanket order, you can record an agreement for a specific period
            (e.g. a year) and you order products within this agreement to benefit
            from the negotiated prices.
          </p>
        </field>
    </record>

        <menuitem action="purchase.purchase_rfq" id="purchase.menu_purchase_rfq"
                  parent="purchase.menu_procurement_management"
                  sequence="2"/>

        <menuitem
                id="purchase_requisition.menu_purchase_requisition_pro_mgt"
                sequence="1"
                name="Purchase Requisition"
                parent="purchase.menu_procurement_management"
                action="purchase_requisition.action_purchase_requisition"/>


    </data>
</odoo>