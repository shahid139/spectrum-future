<odoo>
    <data>
        <record id="sale_quatation_inherited" model="ir.ui.view">
            <field name="name">Sale Order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_quotation_tree_with_onboarding"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="sequence" string="Number"/>
                </xpath>
            </field>
        </record>

        <record id="view_order_form_spectrum_inherit" model="ir.ui.view">
            <field name="name">Sale Order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='name']" position="replace">
                    <field name="name" readonly="1" invisible="state in ('draft','sent','first_approval','second_approval','third_approval','fourth_approval')"/>
                </xpath>
                <xpath expr="//field[@name='name']" position="after">
                    <field name="sequence" readonly="1" invisible="state not in ('draft','sent','first_approval','second_approval','third_approval','fourth_approval')"/>
                </xpath>
                <xpath expr="//button[@name='action_quotation_send']" position="replace">
                    <button name="action_quotation_send" id="send_by_email_primary" string="Send by Email" type="object" data-hotkey="g" invisible="state != 'fourth_approval'" class="btn-primary" context="{'validate_analytic': True}"/>
                </xpath>
                <xpath expr="//button[@id='send_by_email']" position="replace">
                    <button name="action_quotation_send" id="send_by_email" string="Send by Email" type="object" invisible="1" data-hotkey="g" context="{'validate_analytic': True}"/>

                </xpath>
                <xpath expr="//header/button[@name='action_quotation_send']" position="after">
                    <button name="first_approval" invisible="state not in ('draft','sent')" string="Approval 1"
                            type="object"
                            class="btn-primary"/>
                    <button name="second_approval" invisible="state != 'first_approval'" string="Approval 2"
                            type="object"
                            class="btn-primary"/>
                    <button name="third_approval" invisible="state != 'second_approval'" string="Approval 3"
                            type="object"
                            class="btn-primary"/>
                    <button name="fourth_approval" invisible="state != 'third_approval'" string="Approval 4"
                            type="object"
                            class="btn-primary"/>
                </xpath>
                <xpath expr="//header/button[@name='action_cancel']" position="replace">
                    <button name="action_cancel" type="object" string="Cancel"
                            invisible="state not in ['draft', 'sent', 'sale', 'first_approval', 'second_approval', 'third_approval', 'fourth_approval'] or not id or locked" data-hotkey="x"/>
                </xpath>

                <xpath expr="//button[@name='action_confirm'][2]" position="replace">
                    <button name="action_confirm" data-hotkey="q" string="Confirm" type="object"
                            context="{'validate_analytic': True}" invisible="state != 'fourth_approval'"/>
                </xpath>
<!--                <xpath expr="//field[@name='order_line']/tree/field[@name='unit_price']" position="after">-->
<!--                    <field name="last_selling_price"/>-->
<!--                </xpath>-->
                <xpath expr="//tree/field[@name='price_unit']" position="after">
                    <field name="last_selling_price"/>
                </xpath>

            </field>
        </record>

        <record id="crm_case_kanban_view_leads_inherited" model="ir.ui.view">
        <field name="name">crm.lead.kanban.lead.inherit.iap.mine.inherited</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm_iap_mine.crm_case_kanban_view_leads"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_generate_leads']" position="replace">
                <button name="action_generate_leads" type="object" class="o_button_generate_leads" string="Generate Leads"
                            groups="sales_team.group_sale_manager" display="always" invisible="1"/>
            </xpath>
        </field>
    </record>




    </data>
</odoo>